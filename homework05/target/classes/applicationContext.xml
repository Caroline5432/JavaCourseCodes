<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.2.xsd http://www.springframework.org/schema/aop https://www.springframework.org/schema/aop/spring-aop.xsd">

    <!-- 通过设值注入方式装配 -->
    <bean id="student111" class="com.github.spring01.caroline.pojo.Student">
        <property name="id" value="111" />
        <property name="name" value="caroline111" />
    </bean>

    <!-- 通过构造注入方式装配 -->
    <bean id="student222" class="com.github.spring01.caroline.pojo.Student">
        <constructor-arg index="0" value="222"/>
        <constructor-arg index="1" value="caroline222"/>
    </bean>

    <!-- 使用 context 命名空间 ,在配置文件中开启相应的注解处理器 -->
    <context:annotation-config />
    <!--定义Bean实例  -->
    <bean id="studentDao" class="com.github.spring01.caroline.dao.StudentDaoImpl" />

</beans>